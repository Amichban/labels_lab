# Label Computation System Environment Configuration

# Application Settings
DEBUG=false
ENVIRONMENT=development
APP_VERSION=1.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9440
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_password_here
CLICKHOUSE_DATABASE=quantx
CLICKHOUSE_SECURE=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_password_here
REDIS_DB=0

# Cache Configuration
CACHE_TTL_SECONDS=3600

# Batch Processing
BATCH_CHUNK_SIZE=10000
PARALLEL_WORKERS=8

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Google Cloud (Optional)
# GCP_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Security (Add proper secrets in production)
JWT_SECRET=your-jwt-secret-key-change-in-production
API_KEY_PREFIX=label_

# Performance Targets
MAX_INCREMENTAL_LATENCY_MS=100
TARGET_CACHE_HIT_RATE=0.95
BATCH_THROUGHPUT_TARGET=1000000